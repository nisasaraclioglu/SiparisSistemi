@{
    ViewData["Title"] = "Giriş";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2>Tech<span class="store-highlight">Store</span></h2>
            <p>Hoş Geldiniz</p>
        </div>
        <div class="login-form">
            <form method="post" asp-controller="Login" asp-action="AdminLogin">
                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-user"></i>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı Adı" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-lock"></i>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Şifre" required>
                    </div>
                </div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        @ViewBag.ErrorMessage
                    </div>
                }
                <button type="submit" class="login-btn">
                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                </button>
            </form>
            <div class="login-footer">
                <p>Hesabınız yok mu?</p>
                <a asp-controller="Login" asp-action="Register" class="register-link">
                    <i class="fas fa-user-plus"></i> Yeni Hesap Oluştur
                </a>
            </div>
        </div>
    </div>
</div> 