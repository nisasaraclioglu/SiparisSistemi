@model Customers

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2>Tech<span class="store-highlight">Store</span></h2>
            <p>Yeni Hesap Oluştur</p>
        </div>
        <div class="login-form">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    <ul>
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@modelError.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form method="post" asp-controller="Login" asp-action="Register">
                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-user"></i>
                        <input asp-for="CustomerName" class="form-control" placeholder="Kullanıcı Adı" required>
                    </div>
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Şifre" required>
                    </div>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-wallet"></i>
                        <input asp-for="Budget" type="number" step="0.01" class="form-control" placeholder="Başlangıç Bütçesi" required>
                    </div>
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>

                <button type="submit" class="login-btn">
                    <i class="fas fa-user-plus"></i> Kayıt Ol
                </button>
            </form>
            <div class="login-footer">
                <p>Zaten hesabınız var mı?</p>
                <a asp-controller="Login" asp-action="CustomerLogin" class="register-link">
                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                </a>
            </div>
        </div>
    </div>
</div>
